<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:gravity="center"
    android:paddingBottom="20dp"
    >
    <TextView
        android:background="@color/Color_F9B138"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin tài khoản"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center"
        />


    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/kyc" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Họ và tên:"
        android:textSize="16sp"
        />
    <EditText
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ed_name_cus_dl"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="Tên"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Địa chỉ:"
        android:textSize="16sp"
        />
    <EditText
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ed_address_cus_dl"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="Địa chỉ"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Số điện thoại:"
        android:textSize="16sp"
        />
    <EditText
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ed_sdt_cus_dl"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="Số điện thoại"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Email:"
        android:textSize="16sp"
        />
    <EditText
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ed_email_cus_dl"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Giới tính:"
        android:textSize="16sp"
        />
    <EditText
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ed_gender_cus_dl"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="Giới tính"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/dialogedit_cus"
            android:layout_width="247dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Xác nhận"
            android:background="#4CAF50"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>



</LinearLayout>