<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:background="@drawable/border_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/iv_item_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/next" />

        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_width="244dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="=rds, a division of UMG Recordings, Inc."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="100.000.000 vnd"
                android:textColor="#F44336"
                android:textSize="12sp"
                android:textStyle="bold" />

                <LinearLayout
                    android:background="@drawable/border_card_item"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/tru"
                        android:background="@drawable/border_card_btnqty"
                        android:paddingTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/minus"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/quantity"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/cong"
                        android:background="@drawable/border_card_btnqty"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="7.5dp"
                        android:src="@drawable/plus"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>


        </LinearLayout>

<!--        <CheckBox-->
<!--            android:id="@+id/checkbox_cart"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_gravity="center" />-->
        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:id="@+id/btn_delete"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:src="@drawable/remove" />


    </LinearLayout>

</LinearLayout>